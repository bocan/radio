# EditorConfig is awesome: http://EditorConfig.org
# Uses editorconfig to maintain consistent coding styles

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{tf,tfvars}]
indent_size = 2
indent_style = space
max_line_length = 0

[*.{yml,yaml}]
indent_size = 2
indent_style = space
max_line_length = 0

[*.json]
insert_final_newline = false
indent_style = space
indent_size = 4
max_line_length = 0

[package.json]
; The various tools (npm, yarn, ...) that edit package.json files all
; seem to use 2-space indent, not 4.
indent_size = 2

[Jenkinsfile]
max_line_length = 0

[Dockerfile]
max_line_length = 0

[*.md]
max_line_length = 80
trim_trailing_whitespace = true

[Makefile]
tab_width = 2
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 0

